* {
  box-sizing: border-box;
}
body {
  margin: 0;
  background-color: #dbdbe0;
  line-height: 3px;
  font-family: 'Cousine', monospace;
}
header {
  padding: 50px;
}
h1{
  font-size:16px;
  color: #e80000;
  text-decoration: none;
  padding-bottom: 5px;
}
p {
  text-decoration: none;
}
#subtitle{
  text-transform: uppercase;
  font-size:13px;
  color: #000000;
}
#subtitle2{
  font-size:12px;
  color: #000000;
}
.column {
  float: left;
  padding: 10px;
}
/*left+right columns*/
.column.side {
  position: fixed;
}
/*middle column*/
.column.middle {
  width: 45%;
  text-align: center;
  position: absolute;
  margin-top: 9%;
  padding-left:5%;
  padding-right: 5%;
  left: 50%;
  top: 0%;
  transform: translateX(-50%);
  z-index: -9999;
}
#description1{
  position: relative;
  line-height:15px;
  color: #4e4e4e;
  height: 300px;
  max-width: 250px;
}
  #index{
    position: relative;
    font-size:12px;
    color: #4e4e4e;
    height: 300px;
    top: -70px;
  }
  #description1{
    font-size:12px;
    top: 70px;
    margin-left:81px;
    font-style: oblique;
  }
 #artists{
   line-height: 10px;
   margin-left:15px;
 }
  .year:active{
    font-style: italic;
    text-decoration: none;
  }
  .year:hover {
    font-weight: bold;
    text-decoration: none;
  }
#left {
  text-align: right;
  position: fixed;
  margin-top: -3px;
  width: 27.5%;
}
#right {
  text-align: left;
  position: fixed;
  left: 75%;
  transform: translateX(-10%);
  width: 25%;
}
.media {
  width:100%;
  margin-bottom: 10px;
}
#logo {
  width: 80px;
}
.row:after {
  content: "";
  display: table;
  clear: both;
}
#mobile-version-column{
  display: none;
}
#desktop-version-column{
  display: block;
}
/* #mobile-version-column{
  display: none;
} */
/* responsive layouts for cellphones*/
@media screen and (max-width: 600px) {
.column.side, .column.middle {
    width: 100%;
}
.column.side{
  display: none;
}
#mobile-version-column{
  display: block;
  align-items: center;
  padding-bottom: 2%;
}
#desktop-version-column{
  display: none;
}
 #description1{
  position: absolute;
  align-items: center;
  padding-top: 5%;
  padding-bottom: 5%;
}
.footer {
  padding: 50px;
}
}
